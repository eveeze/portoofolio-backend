{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["es2022", "dom"],

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./", // Change this to the root
    "outDir": "./dist",
    "resolveJsonModule": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*", "convex/**/*"], // Add convex folder here
  "exclude": ["node_modules", "dist"]
}
